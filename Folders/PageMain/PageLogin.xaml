<Page x:Class="WpfHomeworkNew.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfHomeworkNew.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Окно Авторизации">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Введите логин: " Margin="5"></TextBlock>
        <TextBox Name="txbLogin" Margin="5"></TextBox>
        <TextBlock Text="Введите пароль: " Margin="5"></TextBlock>
        <PasswordBox Name="psbPassword" Margin="5"></PasswordBox>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Click="for_entry" Style="{StaticResource entry}" Margin="5"></Button>
            <Button Click="btnRegIn_Click" Style="{StaticResource registration}" Margin="5"></Button>
        </StackPanel>
    </StackPanel>
</Page>
