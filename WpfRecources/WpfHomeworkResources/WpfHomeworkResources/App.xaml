<Application x:Class="WpfHomeworkResources.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfHomeworkResources"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="style_for_button">
            <Setter Property="Width" Value="80"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>


        <BitmapImage x:Key="imgRes1" UriSource="/Resources/1.png"></BitmapImage>
        <BitmapImage x:Key="imgRes2" UriSource="/Resources/2.png"></BitmapImage>
        <BitmapImage x:Key="imgRes3" UriSource="/Resources/3.png"></BitmapImage>
        <BitmapImage x:Key="imgRes4" UriSource="/Resources/4.png"></BitmapImage>
        <BitmapImage x:Key="imgRes5" UriSource="/Resources/5.png"></BitmapImage>
        <BitmapImage x:Key="imgRes6" UriSource="/Resources/6.png"></BitmapImage>
        <BitmapImage x:Key="imgRes7" UriSource="/Resources/7.png"></BitmapImage>
        <BitmapImage x:Key="imgRes8" UriSource="/Resources/8.png"></BitmapImage>
        <BitmapImage x:Key="imgRes9" UriSource="/Resources/9.png"></BitmapImage>
        <BitmapImage x:Key="imgRes10" UriSource="/Resources/10.png"></BitmapImage>

    </Application.Resources>
</Application>
